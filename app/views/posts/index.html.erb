<div class="jumbotron jumbotron-fluid">
  <div class="jumbocontainer">
    <h1 class="display-4">Welcome to UnigeCommunity</h1>
    <p class="lead"> Be aware of what is going on within your faculty.</p>
  </div>
</div>


<div class="container">


<div class="row faculty-section my-5">

<h2 class="text-center col-12"> <i class="fas fa-graduation-cap"></i> Faculties <i class="fas fa-graduation-cap"></i></h2>

<%  @categories.each do |category| %>
<div class="col-md-4 text-center my-4 ">
    <div class="card m-1" style="max-width: 18rem; height: 100%;">

    <%= image_tag category.catimage.url, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title text-center"> <%= link_to category.category , category %> </h5>
      <%= category.posts.count %><a> <i class="far fa-copy"></i> </a>

    </div>
  </div>

    </div>
<% end %>


</div>





<div class="row faculty-section my-5">

<h2 class="text-center col-12">  Latest posts </h2>

<%  @posts.each do |p| %>
<div class="col-md-4 text-center my-4 ">
    <div class="card m-1" style="max-width: 18rem; height: 100%;">


    <div class="card-body">
      <h5 class="card-title text-center"> <%= link_to p.title , p %> </h5>
        <span>   <%= link_to "View", p, class: "btn btn-primary"  %> </span>

    </div>
  </div>

    </div>
<% end %>



</div>

</div>
